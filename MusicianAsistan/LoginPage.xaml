            </Frame>

            <!-- Titulo -->
            <Label Text="Band Notes"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="White"/>
            <Label Text="Organiza tus partituras y ensayos"
                   FontSize="14"
                   HorizontalOptions="Center"
                   TextColor="#B388FF"/>

            <!-- Formulario -->
            <Entry x:Name="EmailEntry"
                   Placeholder="Email"
                   Keyboard="Email"
                   PlaceholderColor="#B388FF"
                   TextColor="White"
                   BackgroundColor="#1E1E1E"
                   HeightRequest="50"
                   />

            <Entry x:Name="PasswordEntry"
                   Placeholder="Password"
                   IsPassword="True"
                   PlaceholderColor="#B388FF"
                   TextColor="White"
                   BackgroundColor="#1E1E1E"
                   HeightRequest="50"
                   />

